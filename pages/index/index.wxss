/**index.wxss**/
swiper {
  height: 400rpx;
}

swiper image {
  width: 100%;
  height: 100%;
}

#news-list {
  min-height: 600rpx;
  padding: 15rpx;
}

.list-item {
  border-bottom: 1rpx solid gray;
  width: 100%;
  display: flex;
}


.list-item image {
  width: 250rpx;
  height: 150rpx;
  margin: 10rpx;
  flex-shrink: 0;
}

.news-title {
  width: 100%;
  display: block;
  line-height: 60rpx;
  font-size: 12pt;
  font-weight: bold;
}

.news-text {
  margin: 10rpx;
  display: flex;
  flex-direction: column;
}

.news-date {
  font-size: 10pt;
}
